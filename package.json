{
  "name": "dashboard-api-server",
  "version": "0.1.0",
  "description": "rest api server for openpitrix dashboard",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "docker build -t sunnyw/json-server .",
    "start": "docker run -it -d --rm -p 3000:3000 -v $(pwd):/app --name op-api-server sunnyw/json-server",
    "sh": "docker exec -it api-server sh",
    "lint": "prettier './*.{js,md}' -l",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "rest",
    "api",
    "json-server",
    "mocking",
    "openpitrix"
  ],
  "author": "sunnyw <iwisunny@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.1"
  },
  "dependencies": {
    "faker": "^4.1.0",
    "json-server": "^0.12.2"
  }
}
